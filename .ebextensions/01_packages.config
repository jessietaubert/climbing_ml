packages:
  yum:
    gcc-c++: []
    python3-devel: []
    atlas-devel: []
    lapack-devel: []
    blas-devel: []

commands:
  01_upgrade_pip:
    command: "/var/app/venv/*/bin/pip install --upgrade pip setuptools wheel"
    ignoreErrors: false

container_commands:
  01_install_numpy:
    command: "/var/app/venv/*/bin/pip install numpy==1.24.3"
  02_install_scipy:
    command: "/var/app/venv/*/bin/pip install scipy==1.10.1"
  03_install_pandas:
    command: "/var/app/venv/*/bin/pip install pandas==2.0.3"
  04_install_scikit:
    command: "/var/app/venv/*/bin/pip install scikit-learn==1.3.0"
  05_install_xgboost:
    command: "/var/app/venv/*/bin/pip install xgboost==2.0.2"
  06_install_flask:
    command: "/var/app/venv/*/bin/pip install Flask==2.3.3 Werkzeug==2.3.7 gunicorn==21.2.0"

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: application:application
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: apache